@model MoviesDB.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Add new movie</h1>

<hr />
<div class="row">
    <div class="col-md-4" style="border: 3px solid #696969; background-color:#999999; opacity:0.9; margin-inline: auto; width:500px">
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Release year</label>
                <input asp-for="ReleaseYear" class="form-control" min="1900" step="1" max="2099" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:left;">
                <br />
                <input type="submit" value="Create" class="btn btn-primary" />
                <br />
            </div>
        </form>
        <br/>
        <div style="margin-left:20%;">
            <a class="btn btn-outline-danger" asp-action="Index">Back to the list</a>
        </div>
        <br/>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
